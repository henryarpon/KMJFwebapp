<div id="editModalContainer" class="modal-container">
    <span class="close-button" id="editForm-closeButton">&times;</span>
    <h2>Edit Inventory</h2>
    <form id="editInventoryForm">
        <div class="form-group">
            <label for="sku">SKU:</label>
            <input type="text" id="editSKU" name="sku" required>
        </div>
        <div class="form-grid">
            <div class="form-group">
                <label for="product_name">Product Name:</label>
                <input type="text" id="editProductName" name="product_name" required>
            </div>

            <div class="form-group">
                <label for="received_quantity">Received Quantity:</label>
                <input type="number" id="editReceivedQuantity" name="received_quantity" min="1" required>
            </div>

            <div class="form-group">
                <label for="cost_price">Cost Price:</label>
                <input type="number" id="editCostPrice" name="cost_price" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="selling_price">Selling Price:</label>
                <input type="number" id="editSellingPrice" name="selling_price" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="supplier">Supplier:</label>
                <input type="text" id="editSupplier" name="supplier" required>
            </div>

            <div class="form-group">
                <label for="supplier_email">Supplier Email Address:</label>
                <input type="text" id="editSupplierEmail" name="supplier_email" required>
            </div>

            <div class="form-group">
                <label for="reorder_point">Reorder Point:</label>
                <input type="number" id="editReorderPoint" name="reorder_point" required>
            </div>

            <div class="form-group">
                <label for="reoder_quantity">Reorder Qauntity:</label>
                <input type="number" id="editReorderQuantity" name="reoder_quantity" required>
            </div>
        </div>

        <div class="form-group">
            <label for="received_quantity">Quantity in stock:</label>
            <input type="number" id="editQuantityInStock" name="quantity_inStock" min="1" required>
        </div>

        <div id="document-div" class="form-group">
            <label for="documentNumber">Document / Receipt / Reference Number:</label>
            <input type="text" id="editDocumentNumber" name="documentNumber" required>
        </div>

        <!-- Add a hidden field for identifying the item to be edited -->
        <input type="hidden" id="editFormItemId" name="item_id" value="">
        <button type="submit" class="inventoryButton">Save Changes</button>
        <button type="button" id="deleteButton" class="inventoryButton">Delete Item</button>
    </form>
</div>